{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "isbin": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20
        },
        "amazon-url": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "author": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "publisher": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "language": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "pages": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10000
        },
        "year": {
            "type": "integer",
            "minimum": 1900,
            "maximum": 2022
        },

    
    },
    "required": [
        "isbin",
        "amazon-url",
        "title",
        "author",
        "publisher",
        "language",
        "pages",
        "year",
        "quantity",
        "price"

    ]

}

